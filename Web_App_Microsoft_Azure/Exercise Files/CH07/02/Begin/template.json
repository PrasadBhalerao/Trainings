        "dependsOn": [
          "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlDatabases', parameters('databaseAccounts_hplussports31_name'), parameters('cosmosdb_dbname'))]",
          "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('databaseAccounts_hplussports31_name'))]"
        ],
        "properties": {
          "resource": {
            "id": "[parameters('cosmosdb_collection_name')]",
            "indexingPolicy": {
              "indexingMode": "consistent",
