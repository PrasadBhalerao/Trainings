                }
              ]
            },
            "partitionKey": {
              "paths": [
                "/Category"
              ],
              "kind": "Hash"
            },
            "uniqueKeyPolicy": {
              "uniqueKeys": []
            },
            "conflictResolutionPolicy": {
              "mode": "LastWriterWins",
              "conflictResolutionPath": "/_ts"
            }
          },
          "options": {}
        }
      },
        {
